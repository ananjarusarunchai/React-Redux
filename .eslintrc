{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": [
        "react"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "comma-dangle": 0,
        "react/prop-types": 0,
        "react/jsx-uses-vars": 1,
        "react/display-name": 1,
        "no-unused-vars": "warn",
        "no-console": 0,
        "no-unexpected-multiline": "warn"
    },
    "env":{
        "mocha": true,
        "jasmine": true,
        "es6": true,
        "jest": true,
        "node": true,
        "browser": true
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "15.6.1"
        }
    },
    "globals": {
        "setInterval": true,
        "clearInterval": true,
    }
}